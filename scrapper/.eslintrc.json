{
    "env": {
        "es2021": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/ban-ts-ignore": "off",
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/no-unused-vars": "off", // I know that this can be a little controversy
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        //"curly": ["warn", "all"],
        "eqeqeq": ["error", "always"]
    }
}
